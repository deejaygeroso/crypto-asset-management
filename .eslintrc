{
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "mongo": true,
      "browser": true,
      "jquery": true,
      "jest": true,
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "plugins": [ "react" ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "globals": {
      "describe": 0,
      "it": 0,
      "xit": 0,
      "xdescribe": 0,
      "PROJECT_SETTINGS": 0
    },
    "rules": {
      "react/display-name": 0,
      "import/default": 0,
      "no-console": 1,
      "comma-dangle": 0,
      "import/extensions": 0,
      "import/no-absolute-path": 0,
      "import/no-unresolved": [2, {
        "ignore": [ "^/src", "/", ]
      }],
      "no-mixed-spaces-and-tabs": [0, "smart-tabs"],
      "no-useless-escape" : 0,
      "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
    }
}
